<?xml version="1.0" encoding="UTF-8"?>
<case name="Single Trade Query" desc="Single Trade Query">
  <request tag="STQReq" desc="Single Trade Query Request">
    <field name="version" />
    <field name="instId" />
    <field name="certId" />
    <field name="date" />
    <field name="type" show="true" />
    <field name="bankCardType" show="true" />
    <field name="serialNo" />
    <field name="checkSerialNo" show="true" />
    <field name="channelSystemId" show="true" />
  </request>
  <response tag="STQRes" desc="Single Trade Query Response">
    <field name="version" present="mandate" />
    <field name="instId" present="mandate" />
    <field name="certId" present="mandate" />
    <field name="type" present="mandate" />
    <field name="serialNo" present="mandate" />
    <field name="checkSerialNo" present="mandate" />
    <field name="date" present="mandate" />
    <field name="bankCardNo" present="mandate" />
    <field name="amount" present="mandate" />
    <field name="charge" present="optional" />
    <field name="currency" present="mandate" />
    <field name="originalSerialNo" present="optional" />
    <field name="originalDate" present="optional" />
    <field name="channelSystemId" present="optional" />
    <field name="banktime" present="optional" />
    <field name="status" present="mandate" />
    <field name="retCode" present="optional" />
  </response>
</case>

