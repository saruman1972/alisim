<case name="Online Payment" desc="Online Payment">
  <request tag="CPReq" desc="Card Payment Request">
    <field name="version" />
    <field name="instId" />
    <field name="certId" />
    <field name="serialNo" />
    <field name="date" />
    <field name="bankCardNo" show="true" />
    <field name="bankCardType" show="true" />
    <field name="mobilePhone" show="true" />
    <field name="amount" show="true" />
    <field name="useCode" show="true" />
    <field name="currency" show="true" />
    <field name="remark" show="true" />
    <field name="channelSystemId" />
  </request>
  <response tag="CPRes" desc="Card Payment Response">
    <field name="version" present="mandate" />
    <field name="instId" present="mandate" />
    <field name="certId" present="mandate" />
    <field name="serialNo" present="mandate" />
    <field name="bankCardNo" present="mandate" />
    <field name="amount" present="mandate" />
    <field name="overdraft" present="mandate" />
    <field name="channelSystemId" present="optional" />
  </response>
</case>

